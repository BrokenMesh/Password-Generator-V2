@page "/"

<PageTitle>Home</PageTitle>

<div class="row">
    <div class="col-lg-6">
        <div class="card card-chart">
            <div class="card-header ">
                <div class="row">
                    <div class="col-sm-6 text-left">
                        <h5 class="card-category">Password-Seed</h5>
                        <h2 class="card-title">V1 Seed Password</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div style="height: 200px;"></div>
            </div>
        </div>
    </div>
    <div class="col-lg-6">
        <div class="card card-chart">
            <div class="card-header ">
                <div class="row">
                    <div class="col-sm-6 text-left">
                        <h5 class="card-category">Password-Seed</h5>
                        <h2 class="card-title">V2 Seed Password</h2>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div style="height: 200px;"></div>
            </div>
        </div>
    </div>
</div>

<hr />

@foreach (var i in serviceItems) {
    <div class="row">
        <div class="col-lg-12">
            <div class="card card-chart">
                <div class="card-header ">
                    <div class="row">
                        <div class="col-sm-6 text-left">
                            <h5 class="card-category">Services</h5>
                            <h2 class="card-title">@i.Name</h2>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div style="height: 100px;"></div>
                </div>
            </div>
        </div>
    </div>
}


<hr />

<div class="create-pwd-container">
    <div class="create-pwd-centered">
        <input @bind-value="@newServiceValue" type="text" class="form-control">
        <button @onclick="AddService" class="btn btn-primary" type="button">Add Service</button>
    </div>
</div>

<style>
    .create-pwd-container {
    width: 100%;
    }

    .create-pwd-centered {
    width: 400px;
    margin: 0 auto;
    display: flex;
    gap: 4px;
    }
</style>

@code {

    private string newServiceValue = "";

    private List<ServiceItem> serviceItems;

    protected override void OnInitialized() {
        serviceItems = new List<ServiceItem> {
            new ("Google"),
            new ("Demo"),
        };
    }

    private void AddService() {
        serviceItems.Add(new ServiceItem(newServiceValue));
        newServiceValue = "";
        StateHasChanged();
    }


}